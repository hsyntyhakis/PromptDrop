{
    "manifest_version": 3,
    "name": "PromptDrop",
    "version": "2.3",
    "description": "Save and manage your prompts like never before.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "storage",
      "scripting",
      "clipboardWrite"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
    {
      "resources": [
        "icons/logo.png",
        "icons/pin.png",
        "icons/unpin.png",
        "icons/delete.png",
        "icons/edit.png",
        "icons/copy.png",
        "icons/copied.png"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}